<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    <window name="mpc">
        <area>0,0,100%,100%</area>
        <shape name="background">
            <area>0,0,100%,100%,</area>
            <type>roundbox</type>
            <cornerradius>10</cornerradius>
            <line color="#FFFFFF" alpha="255" width="1" />
            <fill color="Green" alpha="30" />
        </shape>

        <textarea name="heading">
            <area>10,10,100%-10,100</area>
            <font>baseextralarge</font>
            <align>allcenter</align>
            <value>MythMpc</value>
        </textarea>

        <clock name="time">
            <area>780,5,480,40</area>
            <template>%TIME%</template>
            <align>vcenter,right</align>
        </clock>

        <button name="previous" from="basebutton">
            <area>20,120,240,40</area>
            <value>&lt;&lt; Previous</value>
        </button>
        <button name="play_pause" from="basebutton">
            <area>280,120,240,40</area>
            <value>Play</value>
        </button>
        <button name="stop" from="basebutton">
            <area>540,120,240,40</area>
            <value>Stop</value>
        </button>
        <button name="next" from="basebutton">
            <area>800,120,240,40</area>
            <value>Next &gt;&gt;</value>
        </button>

        <button name="volume_up" from="basebutton">
            <area>20,180,240,40</area>
            <value>vol +5</value>
        </button>
        <button name="volume_down" from="basebutton">
            <area>280,180,240,40</area>
            <value>vol -5</value>
        </button>
        <button name="config" from="basebutton">
            <area>1090,80,120,40</area>
            <value>config</value>
        </button>
        <textarea name="infotext">
            <area>40,250,100%,100%</area>
            <font>baseextralarge</font>
            <multiline>true</multiline>
            <template>
                %ARTIST% || %TITLE%    || %song_elapsed_min%:%song_elapsed_sec% || %volume%%%
            </template>
        </textarea>

