<?xml version="1.0" encoding="utf-8"?>
<mythuitheme>
    <window name="mpc">
        <area>0,0,100%,100%</area>
        <shape name="background">
            <area>0,0,100%,100%,</area>
            <type>roundbox</type>
            <cornerradius>10</cornerradius>
            <line color="#FFFFFF" alpha="255" width="1" />
            <fill color="Green" alpha="30" />
        </shape>

        <textarea name="title">
            <area>10,10,100%-10,100</area>
            <font>baseextralarge</font>
            <align>allcenter</align>
            <value>MythMpc</value>
        </textarea>

        <clock name="time">
            <area>780,5,480,40</area>
            <template>%TIME%</template>
            <align>vcenter,right</align>
        </clock>

        <textarea name="infotext">
            <area>10,100%-150,100%-10,100</area>
            <font>basemedium</font>
            <multiline>true</multiline>
            <align>allcenter</align>
        </textarea>

        <button name="previous" from="basebutton">
            <area>290,100%-50,120,40</area>
            <value>Previous</value>
        </button>
        <button name="play_pause" from="basebutton">
            <area>470,100%-50,120,40</area>
            <value>Play</value>
        </button>
        <button name="next" from="basebutton">
            <area>610,100%-50,120,40</area>
            <value>Next</value>
        </button>
        <button name="stop" from="basebutton">
            <area>790,100%-50,120,40</area>
            <value>Stop</value>
        </button>

        <button name="volume_up" from="basebutton">
            <area>790,100%-300,120,40</area>
            <value>+</value>
        </button>
        <button name="volume_down" from="basebutton">
            <area>1090,100%-300,120,40</area>
            <value>-</value>
        </button>
        <button name="config" from="basebutton">
            <area>1090,100%-400,120,40</area>
            <value>config</value>
        </button>
    </window>

    <window name="mpc_config">
        <area>0,0,100%,100%</area>
        <shape name="background">
            <area>0,0,100%,100%,</area>
            <type>roundbox</type>
            <cornerradius>10</cornerradius>
            <line color="#FFFFFF" alpha="255" width="1" />
            <fill color="Green" alpha="30" />
        </shape>

        <textarea name="title">
            <area>10,10,100%-10,100</area>
            <font>baseextralarge</font>
            <align>allcenter</align>
        </textarea>

        <clock name="current_time">
            <area>780,5,480,40</area>
            <template>%TIME%</template>
            <align>vcenter,right</align>
        </clock>

        <textarea name="show_message_description">
            <area>100,75,100%-100,30</area>
            <align>vcenter</align>
            <value>MPD Host</value>
        </textarea>

        <textedit name="mpd_host" from="basetextedit"  >
            <area>50,110,1180,80</area>
            <statetype name="background">
                <state name="active">
                    <area>0,0,1180,80</area>
                    <shape name="background" >
                        <area>0,0,100%,100%</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                    </shape>

                    <shape name="textbackground">
                        <area>10,10,100%-10,100%-10</area>
                        <type>roundbox</type>
                        <cornerradius>4</cornerradius>
                        <fill color="#FFFFFF" alpha="200" />
                    </shape>
                </state>
                <state name="selected" from="active">
                </state>
                <state name="inactive" from="active" />
            </statetype>
            <imagetype name="cursor">
                <filename>cursor.png</filename>
            </imagetype>
            <textarea name="text">
                <area>13,13,100%-13,100%-13</area>
                <font>basesmallblack</font>
                <multiline>true</multiline>
            </textarea>
        </textedit>

        <textedit name="mpd_port" from="basetextedit">
            <area>50,520,50%-25,40</area>
        </textedit>

        <textedit name="mpd_pass" from="basetextedit">
            <area>50,620,50%-25,40</area>
        </textedit>

        <button name="ok" from="basebutton">
            <area>300,100%-50,160,40</area>
            <value>OK</value>
        </button>


        <button name="cancel" from="basebutton">
            <area>860,100%-50,120,40</area>
            <value>Cancel</value>
        </button>
</window>
</mythuitheme>
